{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
              "echo": true,
              "reveal": "silent",
              "focus": false,
              "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": [
              "$tsc-watch",
              "$tslint5"
            ]
        }
    ]
}
